<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="travelpals.travelpals.UserAreaActivity">

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:id="@+id/textView"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="12"
        android:id="@+id/etUsername"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        tools:ignore="LabelFor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="12"
        android:id="@+id/etDob"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/etUsername"
        tools:ignore="LabelFor" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/etDob"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/etUsername"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="12"
        android:id="@+id/etName"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/etDob"
        tools:ignore="LabelFor" />

    <TextView
        android:text="Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/etName"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:id="@+id/etGender"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/etName"
        tools:ignore="LabelFor" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/etGender"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:id="@+id/etEmail"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/etName"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btUpdate"
        android:paddingTop="15dp"
        android:text="UPDATE"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/etEmail"
        android:layout_marginBottom="15dp"
        android:layout_alignEnd="@+id/etEmail" />


</RelativeLayout>
